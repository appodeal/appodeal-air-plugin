<?xml version="1.0" encoding="utf-8" ?>

<application xmlns="http://ns.adobe.com/air/application/20.0">
    <id>com.sabzira.PianoTiles1ios</id>
	<!--<id>com.appodeal.sandbox</id>-->
    <filename>Piano Tiles</filename>
    <name>Piano Tiles</name>
    <versionNumber>1.3.0</versionNumber>
    <extensions>
        <extensionID>com.appodeal.aneplugin</extensionID>
    </extensions>

    <initialWindow>
        <content>SWF file name is set automatically at compile time</content>
        <visible>true</visible>
        <autoOrients>true</autoOrients>
        <fullScreen>true</fullScreen>
    </initialWindow>

    <iPhone>
        <InfoAdditions>
            <![CDATA[
            <key>NSAppTransportSecurity</key>
            <dict>
              <key>NSAllowsArbitraryLoads</key>
              <true/>
            </dict>
            <key>UIDeviceFamily</key>
            <array>
                <!-- iPhone and iPod touch devices -->
                <string>1</string>
                <!-- iPad devices -->
                <string>2</string>
            </array>
            <key>MinimumOSVersion</key>
			<string>7.1</string>
            ]]>
        </InfoAdditions>
        <requestedDisplayResolution>high</requestedDisplayResolution>
    </iPhone>

</application>
